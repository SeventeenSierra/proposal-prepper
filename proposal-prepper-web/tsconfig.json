{
  "_comment": "SPDX-License-Identifier: AGPL-3.0-or-later",
  "_copyright": "SPDX-FileCopyrightText: 2025 Seventeen Sierra LLC",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/services/*": ["../proposal-prepper-services/src/*"],
      "proposal-prepper-services": ["../proposal-prepper-services/src/index.ts"],
      "proposal-prepper-services/*": ["../proposal-prepper-services/src/*"],
      "proposal-prepper-middleware/*": ["../proposal-prepper-middleware/src/*"]
    },
    "target": "ES2017"
  },
  "include": [
    "next-env.d.ts",
    "vite-env.d.ts",
    "vitest-env.d.ts",
    "src/test-utils/**/*.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules", "**/*.stories.tsx", "vitest.config.ts", ".inbox/**/*"]
}
