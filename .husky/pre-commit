#!/bin/sh
# SPDX-License-Identifier: PolyForm-Perimeter-1.0.0
# SPDX-FileCopyrightText: 2025 Seventeen Sierra LLC
#
# Pre-commit hook for Proposal Prepper
# Runs security scanning, lint and typecheck before allowing commits
#
# AI agents (Jules, Renovate, etc.) should set HUSKY=0 to skip hooks
# See .agent/config.yaml and AI_CONTRIBUTOR_POLICY.md

# Skip if HUSKY=0 (for bots)
if [ "$HUSKY" = "0" ]; then
  echo "â­ï¸  Skipping pre-commit hooks (HUSKY=0)"
  exit 0
fi

# Detect pnpm - try multiple locations
if command -v pnpm >/dev/null 2>&1; then
  PNPM="pnpm"
elif command -v npx >/dev/null 2>&1; then
  PNPM="npx pnpm"
else
  echo "âš ï¸  pnpm not found. Run from nix develop shell or install pnpm globally."
  echo "   Skipping pre-commit checks..."
  exit 0
fi

echo "ğŸ” Running pre-commit checks..."

# Security scanning with Trivy (if available)
if command -v trivy >/dev/null 2>&1; then
  echo "ğŸ”’ Scanning for secrets with Trivy..."
  trivy fs --scanners secret --exit-code 1 --quiet .
  if [ $? -ne 0 ]; then
    echo "âŒ Trivy found hardcoded secrets. Remove them before committing."
    exit 1
  fi
  echo "âœ“ Trivy: No secrets found"
else
  echo "âš ï¸  Trivy not installed, skipping secret scan (install: brew install trivy)"
fi

# Security scanning with Gitleaks (if available)
if command -v gitleaks >/dev/null 2>&1; then
  echo "ğŸ” Scanning for secrets with Gitleaks..."
  gitleaks detect --source . --no-banner --redact -v 2>/dev/null
  if [ $? -ne 0 ]; then
    echo "âŒ Gitleaks found secrets. Remove them before committing."
    exit 1
  fi
  echo "âœ“ Gitleaks: No secrets found"
else
  echo "âš ï¸  Gitleaks not installed, skipping (install: brew install gitleaks)"
fi

# Run lint
echo "ğŸ“ Linting..."
$PNPM run lint
if [ $? -ne 0 ]; then
  echo "âŒ Lint failed. Fix errors before committing."
  exit 1
fi

# Run typecheck
echo "ğŸ” Type checking..."
$PNPM run typecheck
if [ $? -ne 0 ]; then
  echo "âŒ Typecheck failed. Fix errors before committing."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"


