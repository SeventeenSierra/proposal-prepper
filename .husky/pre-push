# Pre-push hook for Proposal Prepper
# Runs tests before allowing pushes
#
# AI agents (Jules, Renovate, etc.) should set HUSKY=0 to skip hooks
# See .agent/config.yaml and AI_CONTRIBUTOR_POLICY.md

# Skip if HUSKY=0 (for bots)
if [ "$HUSKY" = "0" ]; then
  echo "â­ï¸  Skipping pre-push hooks (HUSKY=0)"
  exit 0
fi

# Detect pnpm - try multiple locations
if command -v pnpm >/dev/null 2>&1; then
  PNPM="pnpm"
elif command -v npx >/dev/null 2>&1; then
  PNPM="npx pnpm"
else
  echo "âš ï¸  pnpm not found. Run from nix develop shell or install pnpm globally."
  echo "   Skipping pre-push checks..."
  exit 0
fi

echo "ğŸ§ª Running pre-push checks..."

# Run tests
echo "ğŸ”¬ Running tests..."
$PNPM run test
if [ $? -ne 0 ]; then
  echo "âŒ Tests failed. Fix errors before pushing."
  exit 1
fi

echo "âœ… Pre-push checks passed!"

